{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm -C muralla-frontend install --prod=false && pnpm -C muralla-frontend run build"
  },
  "deploy": {
    "startCommand": "npx --yes serve -s muralla-frontend/dist -l $PORT",
    "healthcheckPath": "/",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
