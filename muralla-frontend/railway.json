{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npx --yes serve -s dist -l $PORT",
    "preDeployCommand": "pnpm -C muralla-frontend run build",
    "healthcheckPath": "/",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
