# Database connection
DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/muralla_db"

# JWT
JWT_SECRET="myverysecretkey"
JWT_EXPIRES_IN="60m"
LOG_LEVEL="info"

# Service URLs (used for CORS and callbacks)
# In Railway, set these to:
# FRONTEND_URL = https://{{ Frontend.RAILWAY_PUBLIC_DOMAIN }}
# BACKEND_URL  = https://{{ Backend.RAILWAY_PUBLIC_DOMAIN }}
FRONTEND_URL="http://localhost:5173"
BACKEND_URL="http://localhost:3000"

# Redis (queues/notifications). Prefer REDIS_URL; otherwise host/port/password.
# Example: redis://:password@localhost:6379
REDIS_URL=""
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Queues
# Set to "true" to disable BullMQ when Redis is not available
DISABLE_QUEUES="false"

# SMTP (optional email delivery)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@muralla.org"

# MercadoPago (optional)
MP_ACCESS_TOKEN=""
MP_CLIENT_ID=""
MP_CLIENT_SECRET=""
MP_CURRENCY="CLP"
MP_STATEMENT_DESCRIPTOR="MURALLA"

# Admin bootstrap (first-time only; remove afterwards)
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="change-me-strong"

# Note: Node version pins for Railway builds are service variables, not dotenv:
# NIXPACKS_NODE_VERSION=20.19.0
# NODE_VERSION=20.19.0
