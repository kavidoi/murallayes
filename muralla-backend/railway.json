{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "pnpm -F muralla-backend start:prod",
    "preDeployCommand": "pnpm -F muralla-backend exec prisma generate && pnpm -F muralla-backend exec prisma migrate deploy",
    "healthcheckPath": "/health/healthz",
    "healthcheckTimeout": 300,
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
