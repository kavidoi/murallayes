{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install --no-frozen-lockfile && pnpm run build"
  },
  "deploy": {
    "startCommand": "pnpm run start",
    "preDeployCommand": "corepack enable && corepack prepare pnpm@8.15.0 --activate && pnpm run build && pnpm exec prisma generate && pnpm exec prisma migrate deploy",
    "healthcheckPath": "/health/healthz",
    "healthcheckTimeout": 300,
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
